<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bouton retour -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_back_button"
            android:src="@drawable/ic_back"
            android:contentDescription="Retour"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Titre -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Détails du véhicule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"/>

        <!-- Image principale -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImage"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_margin="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack">

            <ImageView
                android:id="@+id/imgVoiture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/car_detail_placeholder"
                android:contentDescription="Image voiture"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Marque -->
        <TextView
            android:id="@+id/tvMarque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Porsche"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardImage"/>

        <!-- Modèle -->
        <TextView
            android:id="@+id/tvModele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="911 Carrera"
            android:textSize="18sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="@id/tvMarque"
            app:layout_constraintTop_toBottomOf="@id/tvMarque"/>

        <!-- Prix -->
        <TextView
            android:id="@+id/tvPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="250€"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2962FF"
            app:layout_constraintStart_toStartOf="@id/tvMarque"
            app:layout_constraintTop_toBottomOf="@id/tvModele"/>

        <TextView
            android:id="@+id/tvPrixLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="/ jour"
            android:textSize="16sp"
            android:textColor="#666666"
            app:layout_constraintBaseline_toBaselineOf="@id/tvPrix"
            app:layout_constraintStart_toEndOf="@id/tvPrix"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tvMarque"
            app:layout_constraintTop_toBottomOf="@id/tvPrix"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="Experience the thrill of driving with the iconic Porsche 911 Carrera..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvMarque"
            app:layout_constraintTop_toBottomOf="@id/tvDescriptionTitle"/>

        <!-- Spécifications -->
        <TextView
            android:id="@+id/tvSpecTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Spécifications"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tvMarque"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"/>

        <!-- Grille de specs -->
        <LinearLayout
            android:id="@+id/layoutSpecs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvMarque"
            app:layout_constraintTop_toBottomOf="@id/tvSpecTitle">

            <!-- Sièges -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_seats"
                    android:contentDescription="Sièges"
                    app:tint="#2962FF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sièges"
                    android:textSize="12sp"
                    android:textColor="#999999"/>

                <TextView
                    android:id="@+id/tvSieges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Transmission -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_transmission"
                    android:contentDescription="Transmission"
                    app:tint="#2962FF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Transmission"
                    android:textSize="12sp"
                    android:textColor="#999999"/>

                <TextView
                    android:id="@+id/tvTransmission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Automatique"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Carburant -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_fuel_pump"
                    android:contentDescription="Carburant"
                    app:tint="#2962FF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Carburant"
                    android:textSize="12sp"
                    android:textColor="#999999"/>

                <TextView
                    android:id="@+id/tvCarburant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Essence"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bouton Réserver -->
        <Button
            android:id="@+id/btnReserver"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="24dp"
            android:text="Réserver maintenant"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:backgroundTint="#2962FF"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutSpecs"
            android:layout_marginTop="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>